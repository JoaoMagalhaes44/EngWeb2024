extends layout

block content
    .w3-card-4

        header.w3-container.w3-teal
            h1
                span Periodos List
                a.w3-btn.w3-round.w3-grey(href="/periodos/registo") +            
        .w3-container
            table.w3-table-all
                tr
                    th Name
                each periodo in lPeriodos
                    tr
                        td
                            a(href="/periodos/" + periodo.id)= periodo.id
                        td
                            a.w3-red(href="/periodos/edit/" + periodo.id) Edit
                            a.w3-blue(href="/periodos/delete/" + periodo.id) Delete
        footer.w3-container.w3-teal
            span Generated by EngWeb2024 in #{d} - 
            a(href="/") Voltar à página inicial
            |  | 
            a(href="/periodos") Voltar à página de Periodos
            |  | 
            a(href="/compositores") Voltar à página de Compositores
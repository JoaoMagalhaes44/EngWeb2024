extends layout

block content
    .w3-card-4

        header.w3-container.w3-teal
            h1
                span Compositores List
                a.w3-btn.w3-round.w3-grey(href="/compositores/registo") +            
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Name
                    th Periodo
                    th DataNascimento
                    th DataObito
                each compositor in lCompositores
                    tr
                        td= compositor._id
                        td
                            a(href="/compositores/" + compositor._id)= compositor.nome
                        td= compositor.periodo
                        td= compositor.dataNasc
                        td= compositor.dataObito
                        td
                            a.w3-red(href="/compositores/edit/" + compositor._id) Edit
                            a.w3-blue(href="/compositores/delete/" + compositor._id) Delete
        footer.w3-container.w3-teal
            span Generated by EngWeb2024 in #{d} - 
            a(href="/") Voltar à página inicial
            |  | 
            a(href="/periodos") Voltar à página de Periodos
            |  | 
            a(href="/compositores") Voltar à página de Compositores
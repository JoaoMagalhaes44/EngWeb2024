extends layout 

block content 
        .w3-card-4 
            header.w3-container.w3-teal 
                h1 Compositor #{compositor.id}

            .w3-container 
                ul.w3-ul.w3-card-4(style="width:50%") 
                    li 
                        b Nome:  #{compositor.nome}
                    li 
                        b Número:  #{compositor._id}
                    li 
                        b Periodo: #{compositor.periodo}

            footer.w3-container.w3-teal 
            address 
                span Generated by EngWeb2024 in #{d} - 
                a(href="/") Voltar à página inicial
                |  | 
                a(href="/compositores") Voltar à página de Compositores
